<% if @api_keys.any? %> 
<div class="content content-centered-960">
<% else %>
<div class="content content-centered-768">
<% end %>

  <h2 class="content-head is-center">Your API Keys</h2>

  <% if @api_keys.any? %> 
    <table class="pure-table">
      <thead>
        <tr>
          <th>App Name</th>
          <th>Key</th>
          <th>Daily Requests</th>        
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>    
        <% @api_keys.each do |api_key| %>        
          <tr>
            <td><%= api_key.name %></td>
            <td><%= api_key.key %></td>
            <td><%= api_key.requests_count %></td>                        
            <td><%= link_to 'Destroy', api_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>        
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>
      You don't have any API keys.<br>
      Write the name of your application and press the create button below.
    </p>
  <% end %>

</div>

<div class="content content-centered-768">

  <h2 class="content-head is-center">New API Key</h2>

  <%= render 'form' %>

</div>