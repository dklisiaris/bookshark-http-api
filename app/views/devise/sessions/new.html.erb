<div class="content content-centered-768">

  <h2 class="content-head is-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form pure-form-aligned" }) do |f| %>   

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Your email address' %>    

    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Your password' %>    

    <% if devise_mapping.rememberable? -%>      
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>      
    <% end -%>
 
    <div class="actions">
      <%= f.submit "Log in", class: "pure-button pure-button-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>